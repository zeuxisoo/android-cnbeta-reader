<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/ui_comment"
  android:background="@color/article_content_bgcolor"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TextView
  	android:textSize="16.0sp"
  	android:textStyle="bold"
  	android:textColor="@color/content_header_title_font_color"
  	android:gravity="center_vertical"
  	android:id="@+id/comment_title"
  	android:background="@color/comment_header_background_color"
  	android:padding="5.0dip"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  </TextView>
  <ListView
  	android:id="@+id/comment_list"
  	android:paddingLeft="6.0dip"
  	android:paddingRight="2.0dip"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:listSelector="@drawable/item_selected_background"
	android:cacheColorHint="#00000000"
	android:divider="@drawable/content_line_divider"
  	android:layout_weight="1.0">
  </ListView>
  <RelativeLayout
	android:id="@+id/comment_bottom"
	android:background="@drawable/navigator_background"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="-5.0dip">
	<TextView
		android:textSize="14.0sp"
		android:id="@+id/comment_home"
		android:padding="3.0px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</TextView>
	<TextView
		android:textSize="14.0sp"
		android:id="@+id/comment_refresh"
		android:padding="3.0px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="更新"
		android:layout_alignParentRight="true">
	</TextView>
	</RelativeLayout>
</LinearLayout>